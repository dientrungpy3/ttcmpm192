extends layout.pug

block menu
        li.nav-item
          a.nav-link(href='/') Home
        li.nav-item.active
          a.nav-link(href='/order') Menu
        if user
          li.nav-item
            a.nav-link(href='/contact') Contact
        li.nav-item.cart
          a.nav-link(href='/cart')
            span.icon.icon-shopping_cart
            if newOrder
              span.bag.d-flex.justify-content-center.align-items-center

block content
    section.home-slider.owl-carousel
      .slider-item(style='background-image: url(images/bg_3.jpg);' data-stellar-background-ratio='0.5')
        .overlay
        .container
          .row.slider-text.justify-content-center.align-items-center
            .col-md-7.col-sm-12.text-center.ftco-animate
              h1.mb-3.mt-5.bread Order Online
    section.ftco-menu.mb-5.pb-5
      .container
        .row
          form.search-form.mx-auto
            .form-group
              .icon
                span.icon-search
              input#input-search(type='text' placeholder='Search...')
        .row.d-md-flex
          .col-lg-12.ftco-animate.p-md-5
            .row
              .col-md-12.nav-link-wrap.mb-5
                #v-pills-tab.nav.ftco-animate.nav-pills.justify-content-center(role='tablist' aria-orientation='vertical')
                  a#v-pills-0-tab.nav-link.active(data-toggle='pill' href='#v-pills-0' role='tab' aria-controls='v-pills-0' aria-selected='true') Cơm
                  a#v-pills-1-tab.nav-link(data-toggle='pill' href='#v-pills-1' role='tab' aria-controls='v-pills-1' aria-selected='false') Canh
                  a#v-pills-2-tab.nav-link(data-toggle='pill' href='#v-pills-2' role='tab' aria-controls='v-pills-2' aria-selected='false') Bún/ Phở
                  a#v-pills-3-tab.nav-link(data-toggle='pill' href='#v-pills-3' role='tab' aria-controls='v-pills-3' aria-selected='false') Nước uống
                  a#v-pills-3-tab.nav-link(data-toggle='pill' href='#v-pills-4' role='tab' aria-controls='v-pills-4' aria-selected='false') Thức ăn nhanh
              .col-md-12.d-flex.align-items-center
                #v-pills-tabContent.tab-content.ftco-animate.w-100
                  #v-pills-0.tab-pane.fade.show.active(role='tabpanel' aria-labelledby='v-pills-0-tab')
                    .row
                      each food in foods.com
                        .col-md-3.block
                          .menu-entry
                            .img(style='background-image: url('+food.image+');')
                            .text.text-center.pt-4
                              h3.name-food=food.name
                              p=food.description
                              p.price
                                span=food.price
                              p
                                .btn.btn-primary.btn-outline-primary.add-to-card(data-id=food.id) Add to Cart
                  #v-pills-1.tab-pane.fade(role='tabpanel' aria-labelledby='v-pills-1-tab')
