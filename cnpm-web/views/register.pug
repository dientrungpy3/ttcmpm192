link#bootstrap-css(href='//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css' rel='stylesheet')
script(src='//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js')
script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js')
link(rel='stylesheet' href='css/login.css')

body
  .wrapper.fadeInDown
    #formContent
      .fadeIn.first
        a(href='/')
          img#icon(src='images/logo.png' alt='User Icon')
      if wrong
        .alert.alert-danger(onclick="this.style.display='none'" style="cursor: pointer") Phone number was registered
      if value.password != value.password2
        .alert.alert-danger(onclick="this.style.display='none'" style="cursor: pointer") Wrong confirm password
      form(action ="/register" method="POST")
        input.fadeIn.second(type='text' name='name' placeholder='Full name' required value = value.name)
        input.fadeIn.second(type='text' name='yearBirth' placeholder='Year of Birth (ex: 2000)' pattern="[1-2][0-9]{3}" required  value = value.yearBirth)
        input.fadeIn.second(type='text' name='phone' placeholder='Phone number (ex: 0123456789)' pattern="[0][1-9][0-9]{8}" required value = value.phone)
        input#password.fadeIn.third(type='password' name='password' placeholder='Password' required value = value.password)
        input#password.fadeIn.third(type='password' name='password2' placeholder='Confirm Password' required value = value.password2)
        input.fadeIn.fourth(type='submit' value='Register')
      #formFooter
        p
          a.underlineHover(href='/login') Have an account?
        p
          a.underlineHover(href='/forgot-password') Forgot password an account?
