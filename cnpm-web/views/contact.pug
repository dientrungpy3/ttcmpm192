extends layout.pug

block menu
        li.nav-item
          a.nav-link(href='/') Home
        li.nav-item
          a.nav-link(href='/order') Menu
        li.nav-item.active
          a.nav-link(href='/contact') Contact
        li.nav-item.cart
          a.nav-link(href='/cart')
            span.icon.icon-shopping_cart
            if newOrder
              span.bag.d-flex.justify-content-center.align-items-center

block content
  section.home-slider.owl-carousel
    .slider-item(style='background-image: url(images/bg_3.jpg);' data-stellar-background-ratio='0.5')
      .overlay
      .container
        .row.slider-text.justify-content-center.align-items-center
          .col-md-7.col-sm-12.text-center.ftco-animate
            h1.mb-3.mt-5.bread Contact Us
  section.ftco-section.contact-section
    .container.mt-5
      .row.block-9
        .col-md-4.contact-info.ftco-animate
          .row
            .col-md-12.mb-4
              h2.border-bottom-1(style="color:#000") Contact Information
            .col-md-12.mb-3
              p
                span Address:
                |  Số 1 đường A, phường B, Dĩ An, Bình Dương
            .col-md-12.mb-3
              p
                span Phone: 
                a(href='tel://1234567920') 012 345 678 9
            .col-md-12.mb-3
              p
                span Email: 
                a(href='mailto:info@yoursite.com') canteen@gmail.com
            .col-md-12.mb-3
              p
                span Website: 
                a(href='#') website.com
        .col-md-1
        .col-md-6.ftco-animate
          form.contact-form(action='/contact', method='POST')
            .form-group
              input.form-control(type='text' placeholder='Subject ...' name='subject' required)
            .form-group
              input.form-control(type='file' placeholder='Upload file' name='file')
            .form-group
              textarea.form-control(id='' cols='30' rows='7' placeholder='Message ...' name='message' required)
            .form-group
              input.btn.btn-primary.py-3.px-5(type='submit' value='Send Message')

